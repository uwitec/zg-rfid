       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="pxdat_end">
       			<![CDATA[(m.t0_PXDAT <= to_date(#pxdat_end#,'yyyy-mm-dd HH24:mi:ss') or m.t0_PXDAT is null) ]]>
