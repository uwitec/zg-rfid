	<select id="getOrderInfoListByGroupId" resultMap="zgTorderResult">
			select t.cuid,
		       t.pcdat,
		       t.kdauf,
		       t.kdpos,
		       t.aufnr,
		       task.arbpl,
		       t.maktx2,
		       t.kdauf,
		       task.plant,
		       t.maktx1,
		       t.psmng,
		       task.pmenge,
		       t.matnr,
		       t.label_cn,
		       t.order_state,
		       task.px_date,plan.zbz
			  from zg_t_order            t,
			       zg_t_group_order_plan oup,
			       zg_t_order_plan       plan,
			       zg_t_order_Task      task
			 where oup.group_id = '$groupId$'
			   and oup.order_plan_id = plan.cuid
			   and plan.order_task_id=task.cuid
			   and task.order_id=t.cuid

		
