<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TmdUpperAttr">

    <typeAlias alias="tmdUpperAttr" type="com.boco.frame.meta.base.model.TmdUpperAttr"/>

    <resultMap id="tmdUpperAttrResult" class="tmdUpperAttr">
        <result property="cuid" column="CUID"/>
        <result property="relatedTypeCuid" column="RELATED_TYPE_CUID"/>
        <result property="relatedAttrCuid" column="RELATED_ATTR_CUID"/>
        <result property="upperAttrCuid" column="UPPER_ATTR_CUID"/>
        <result property="relatedJoinAttrCuid" column="RELATED_JOIN_ATTR_CUID"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	t.CUID,
        	t.RELATED_TYPE_CUID,
        	t.RELATED_ATTR_CUID,
        	t.UPPER_ATTR_CUID,
        	t.RELATED_JOIN_ATTR_CUID
	    ]]>
	</sql>
	
	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	    	<isNotEmpty prepend="AND" property="sqlQueryString">
		    		$sqlQueryString$ 
		    </isNotEmpty>
       		<isNotEmpty prepend="AND" property="cuid">
	       			t.CUID like #cuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedTypeCuid">
	       			t.RELATED_TYPE_CUID like #relatedTypeCuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedAttrCuid">
	       			t.RELATED_ATTR_CUID like #relatedAttrCuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="upperAttrCuid">
	       			t.UPPER_ATTR_CUID like #upperAttrCuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedJoinAttrCuid">
	       			t.RELATED_JOIN_ATTR_CUID like #relatedJoinAttrCuid#
       		</isNotEmpty>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="tmdUpperAttr">
    <![CDATA[
        INSERT INTO
        T_MD_UPPER_ATTR (
        	CUID ,
        	RELATED_TYPE_CUID ,
        	RELATED_ATTR_CUID ,
        	UPPER_ATTR_CUID ,
        	RELATED_JOIN_ATTR_CUID 
        ) VALUES (
        	#cuid# ,
        	#relatedTypeCuid# ,
        	#relatedAttrCuid# ,
        	#upperAttrCuid# ,
        	#relatedJoinAttrCuid# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
		<selectKey resultClass="java.lang.String" type="pre" keyProperty="cuid" >
            select sys_guid() as id FROM DUAL
        </selectKey>
    </insert>

    <update id="update" parameterClass="tmdUpperAttr">
    <![CDATA[
        UPDATE T_MD_UPPER_ATTR SET
	        RELATED_TYPE_CUID = #relatedTypeCuid# ,
	        RELATED_ATTR_CUID = #relatedAttrCuid# ,
	        UPPER_ATTR_CUID = #upperAttrCuid# ,
	        RELATED_JOIN_ATTR_CUID = #relatedJoinAttrCuid# 
        WHERE 
	        CUID = #cuid# 
    ]]>
    </update>
    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from T_MD_UPPER_ATTR where
        CUID = #cuid# 
    ]]>
    </delete>
    
    <delete id="deleteByProperty">
    <![CDATA[
        delete from T_MD_UPPER_ATTR t
    ]]>
    	<include refid="dynamicWhere"/>
    </delete>
    
    <select id="getById" resultMap="tmdUpperAttrResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_UPPER_ATTR t
	        where 
		        t.CUID = #cuid# 
	    ]]>
    </select>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from T_MD_UPPER_ATTR t
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tmdUpperAttrResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_UPPER_ATTR t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
    <select id="findByProperty" resultMap="tmdUpperAttrResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_UPPER_ATTR t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
	<select id="findAll" resultMap="tmdUpperAttrResult">
		select <include refid="commonColumns"/> 
	    <![CDATA[
	        from T_MD_UPPER_ATTR t
	    ]]>
    </select>
</sqlMap>
