<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TmdRelated">

    <typeAlias alias="tmdRelated" type="com.boco.frame.meta.base.model.TmdRelated"/>

    <resultMap id="tmdRelatedResult" class="tmdRelated">
        <result property="cuid" column="CUID"/>
        <result property="relatedAttrCuid" column="RELATED_ATTR_CUID"/>
        <result property="relatedJoinTypeCuid" column="RELATED_JOIN_TYPE_CUID"/>
        <result property="relatedJoinAttrCuid" column="RELATED_JOIN_ATTR_CUID"/>
        <result property="cascadeType" column="CASCADE_TYPE"/>
        <result property="statType" column="STAT_TYPE"/>
        <result property="filter" column="FILTER"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	t.CUID,
        	t.RELATED_ATTR_CUID,
        	t.RELATED_JOIN_TYPE_CUID,
        	t.RELATED_JOIN_ATTR_CUID,
        	t.CASCADE_TYPE,
        	t.STAT_TYPE,
        	t.FILTER
	    ]]>
	</sql>
	
	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	    	<isNotEmpty prepend="AND" property="sqlQueryString">
		    		$sqlQueryString$ 
		    </isNotEmpty>
       		<isNotEmpty prepend="AND" property="cuid">
	       			t.CUID like #cuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedAttrCuid">
	       			t.RELATED_ATTR_CUID like #relatedAttrCuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedJoinTypeCuid">
	       			t.RELATED_JOIN_TYPE_CUID like #relatedJoinTypeCuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedJoinAttrCuid">
	       			t.RELATED_JOIN_ATTR_CUID like #relatedJoinAttrCuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="cascadeType">
	       			t.CASCADE_TYPE = #cascadeType#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="statType">
	       			t.STAT_TYPE = #statType#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="filter">
	       			t.FILTER like #filter#
       		</isNotEmpty>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="tmdRelated">
    <![CDATA[
        INSERT INTO
        T_MD_RELATED (
        	CUID ,
        	RELATED_ATTR_CUID ,
        	RELATED_JOIN_TYPE_CUID ,
        	RELATED_JOIN_ATTR_CUID ,
        	CASCADE_TYPE ,
        	STAT_TYPE ,
        	FILTER 
        ) VALUES (
        	#cuid# ,
        	#relatedAttrCuid# ,
        	#relatedJoinTypeCuid# ,
        	#relatedJoinAttrCuid# ,
        	#cascadeType# ,
        	#statType# ,
        	#filter# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
		<selectKey resultClass="java.lang.String" type="pre" keyProperty="cuid" >
            select sys_guid() as id FROM DUAL
        </selectKey>
    </insert>

    <update id="update" parameterClass="tmdRelated">
    <![CDATA[
        UPDATE T_MD_RELATED SET
	        RELATED_ATTR_CUID = #relatedAttrCuid# ,
	        RELATED_JOIN_TYPE_CUID = #relatedJoinTypeCuid# ,
	        RELATED_JOIN_ATTR_CUID = #relatedJoinAttrCuid# ,
	        CASCADE_TYPE = #cascadeType# ,
	        STAT_TYPE = #statType# ,
	        FILTER = #filter# 
        WHERE 
	        CUID = #cuid# 
    ]]>
    </update>
    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from T_MD_RELATED where
        CUID = #cuid# 
    ]]>
    </delete>
    
    <delete id="deleteByProperty">
    <![CDATA[
        delete from T_MD_RELATED t
    ]]>
    	<include refid="dynamicWhere"/>
    </delete>
    
    <select id="getById" resultMap="tmdRelatedResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_RELATED t
	        where 
		        t.CUID = #cuid# 
	    ]]>
    </select>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from T_MD_RELATED t
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tmdRelatedResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_RELATED t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
    <select id="findByProperty" resultMap="tmdRelatedResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_RELATED t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
	<select id="findAll" resultMap="tmdRelatedResult">
		select <include refid="commonColumns"/> 
	    <![CDATA[
	        from T_MD_RELATED t
	    ]]>
    </select>
</sqlMap>
