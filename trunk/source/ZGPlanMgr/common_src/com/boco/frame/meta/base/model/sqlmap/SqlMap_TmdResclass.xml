<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TmdResclass">

    <typeAlias alias="tmdResclass" type="com.boco.frame.meta.base.model.TmdResclass"/>

    <resultMap id="tmdResclassResult" class="tmdResclass">
        <result property="cuid" column="CUID"/>
        <result property="labelCn" column="LABEL_CN"/>
        <result property="tableName" column="TABLE_NAME"/>
        <result property="idName" column="ID_NAME"/>
        <result property="sequenceName" column="SEQUENCE_NAME"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="typeTableName" column="TYPE_TABLE_NAME"/>
        <result property="isSystem" column="IS_SYSTEM"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	t.CUID,
        	t.LABEL_CN,
        	t.TABLE_NAME,
        	t.ID_NAME,
        	t.SEQUENCE_NAME,
        	t.DESCRIPTION,
        	t.TYPE_TABLE_NAME,
        	t.IS_SYSTEM
	    ]]>
	</sql>
	
	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	    	<isNotEmpty prepend="AND" property="sqlQueryString">
		    		$sqlQueryString$ 
		    </isNotEmpty>
       		<isNotEmpty prepend="AND" property="cuid">
	       			t.CUID like #cuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="labelCn">
	       			t.LABEL_CN like #labelCn#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="tableName">
	       			t.TABLE_NAME like #tableName#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="idName">
	       			t.ID_NAME like #idName#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="sequenceName">
	       			t.SEQUENCE_NAME like #sequenceName#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="description">
	       			t.DESCRIPTION like #description#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="typeTableName">
	       			t.TYPE_TABLE_NAME like #typeTableName#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="isSystem">
	       			t.IS_SYSTEM = #isSystem#
       		</isNotEmpty>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="tmdResclass">
    <![CDATA[
        INSERT INTO
        T_MD_RESCLASS (
        	CUID ,
        	LABEL_CN ,
        	TABLE_NAME ,
        	ID_NAME ,
        	SEQUENCE_NAME ,
        	DESCRIPTION ,
        	TYPE_TABLE_NAME ,
        	IS_SYSTEM 
        ) VALUES (
        	#cuid# ,
        	#labelCn# ,
        	#tableName# ,
        	#idName# ,
        	#sequenceName# ,
        	#description# ,
        	#typeTableName# ,
        	#isSystem# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
		<selectKey resultClass="java.lang.String" type="pre" keyProperty="cuid" >
            select sys_guid() as id FROM DUAL
        </selectKey>
    </insert>

    <update id="update" parameterClass="tmdResclass">
    <![CDATA[
        UPDATE T_MD_RESCLASS SET
	        LABEL_CN = #labelCn# ,
	        TABLE_NAME = #tableName# ,
	        ID_NAME = #idName# ,
	        SEQUENCE_NAME = #sequenceName# ,
	        DESCRIPTION = #description# ,
	        TYPE_TABLE_NAME = #typeTableName# ,
	        IS_SYSTEM = #isSystem# 
        WHERE 
	        CUID = #cuid# 
    ]]>
    </update>
    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from T_MD_RESCLASS where
        CUID = #cuid# 
    ]]>
    </delete>
    
    <delete id="deleteByProperty">
    <![CDATA[
        delete from T_MD_RESCLASS t
    ]]>
    	<include refid="dynamicWhere"/>
    </delete>
    
    <select id="getById" resultMap="tmdResclassResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_RESCLASS t
	        where 
		        t.CUID = #cuid# 
	    ]]>
    </select>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from T_MD_RESCLASS t
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tmdResclassResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_RESCLASS t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
    <select id="findByProperty" resultMap="tmdResclassResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_RESCLASS t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
	<select id="findAll" resultMap="tmdResclassResult">
		select <include refid="commonColumns"/> 
	    <![CDATA[
	        from T_MD_RESCLASS t
	    ]]>
    </select>
</sqlMap>
