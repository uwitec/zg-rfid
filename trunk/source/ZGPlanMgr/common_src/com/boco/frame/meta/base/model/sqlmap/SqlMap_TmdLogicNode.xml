<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TmdLogicNode">

    <typeAlias alias="tmdLogicNode" type="com.boco.frame.meta.base.model.TmdLogicNode"/>

    <resultMap id="tmdLogicNodeResult" class="tmdLogicNode">
        <result property="cuid" column="CUID"/>
        <result property="relatedNodeCuid" column="RELATED_NODE_CUID"/>
        <result property="relatedLogicCuid" column="RELATED_LOGIC_CUID"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	t.CUID,
        	t.RELATED_NODE_CUID,
        	t.RELATED_LOGIC_CUID
	    ]]>
	</sql>
	
	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	    	<isNotEmpty prepend="AND" property="sqlQueryString">
		    		$sqlQueryString$ 
		    </isNotEmpty>
       		<isNotEmpty prepend="AND" property="cuid">
	       			t.CUID like #cuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedNodeCuid">
	       			t.RELATED_NODE_CUID like #relatedNodeCuid#
       		</isNotEmpty>
       		<isNotEmpty prepend="AND" property="relatedLogicCuid">
	       			t.RELATED_LOGIC_CUID like #relatedLogicCuid#
       		</isNotEmpty>
	    </dynamic>	
	</sql>
	
    <insert id="insert" parameterClass="tmdLogicNode">
    <![CDATA[
        INSERT INTO
        T_MD_LOGIC_NODE (
        	CUID ,
        	RELATED_NODE_CUID ,
        	RELATED_LOGIC_CUID 
        ) VALUES (
        	#cuid# ,
        	#relatedNodeCuid# ,
        	#relatedLogicCuid# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
		<selectKey resultClass="java.lang.String" type="pre" keyProperty="cuid" >
            select sys_guid() as id FROM DUAL
        </selectKey>
    </insert>

    <update id="update" parameterClass="tmdLogicNode">
    <![CDATA[
        UPDATE T_MD_LOGIC_NODE SET
	        RELATED_NODE_CUID = #relatedNodeCuid# ,
	        RELATED_LOGIC_CUID = #relatedLogicCuid# 
        WHERE 
	        CUID = #cuid# 
    ]]>
    </update>
    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from T_MD_LOGIC_NODE where
        CUID = #cuid# 
    ]]>
    </delete>
    
    <delete id="deleteByProperty">
    <![CDATA[
        delete from T_MD_LOGIC_NODE t
    ]]>
    	<include refid="dynamicWhere"/>
    </delete>
    
    <select id="getById" resultMap="tmdLogicNodeResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_LOGIC_NODE t
	        where 
		        t.CUID = #cuid# 
	    ]]>
    </select>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from T_MD_LOGIC_NODE t
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tmdLogicNodeResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_LOGIC_NODE t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
    <select id="findByProperty" resultMap="tmdLogicNodeResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from T_MD_LOGIC_NODE t
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
	<select id="findAll" resultMap="tmdLogicNodeResult">
		select <include refid="commonColumns"/> 
	    <![CDATA[
	        from T_MD_LOGIC_NODE t
	    ]]>
    </select>
</sqlMap>
